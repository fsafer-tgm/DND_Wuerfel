<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateProfile">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputStrength"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp" android:hint="Strength"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputCharisma"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/inputWisdom"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:hint="Charisma"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputIntelligence"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/inputConstitiution"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:hint="Intelligence"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputConstitiution"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/inputDexterity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:hint="Constitution"
    />
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
            android:layout_marginEnd="162dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/inputCharisma"
            app:layout_constraintHorizontal_bias="1.0" android:onClick="saveProfile"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputWisdom"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/inputIntelligence"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:hint="Wisdom"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputDexterity"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/inputStrength"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:hint="Dexterity"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/error"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="215dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="206dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>